pipeline {
    agent { label 'Dev-Agent' }
    
    stages{
        stage('code'){
            steps {
                git url: 'https://github.com/Shubhamsoni024/node-todo-labapp-cicd.git', branch: 'main'
            }
        }
        stage('Build and Test'){
            steps {
                sh "docker build . -t $JOB_NAME:v1.$BUILD_ID"
            }
        }
        stage('Login and Push Image'){
            steps {
                echo 'logging in to docker hub and pushing image..'
                withCredentials([usernamePassword(credentialsId:'DockerHub',passwordVariable:'DockerHubPassword', usernameVariable:'DockerHubUsername')]) {
                    sh "docker login -u ${env.DockerHubUsername} -p ${env.DockerHubPassword}"
                    sh "docker image tag $JOB_NAME:v1.$BUILD_ID shubhamsonirg/$JOB_NAME:v1.$BUILD_ID"
                    sh "docker image tag $JOB_NAME:v1.$BUILD_ID shubhamsonirg/$JOB_NAME:latest"
                    sh "docker image push shubhamsonirg/$JOB_NAME:v1.$BUILD_ID"
                    sh "docker image push shubhamsonirg/$JOB_NAME:latest"
                    sh "docker image rmi $JOB_NAME:v1.$BUILD_ID shubhamsonirg/$JOB_NAME:v1.$BUILD_ID shubhamsonirg/$JOB_NAME:latest"
                }    
            }
        }
        stage('Coping deployment files to kubernetes cluster'){
            steps {
                sh 'ansible-playbook /opt/kubernetes.yaml'
            }
        }
        stage('Deploy'){
            steps {
                sh "ansible-playbook /opt/deploy.yaml"
            }
        }
    }
}
